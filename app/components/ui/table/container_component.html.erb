<%= turbo_frame_tag 'table', class: 'flex justify-center' do %>
    <div class="<%= "w-full flex flex-col m-10 rounded-md shadow-slate-100 shadow-lg border-slate-200 #{@classes}" %>">
        <div class='flex flex-col'>
            <div class='align-middle inline-block shadow sm:rounded-lg'>
                    <%= header %>
                    <table class=' divide-y divide-slate-200 border-t w-full'>
                        <thead >
                            <tr>
                                <% @columns.each do |column| %>
                                    <th scope='col' class='pl-4 py-3 text-left text-xs font-medium text-slate-500 tracking-wider'>
                                        <%= column.to_s.humanize %>
                                    </th>
                                <% end %>
                            </tr>
                        </thead>
                        <tbody class='bg-black divide-y divide-slate-200 w-full'>
                            <% rows.each do |row| %>
                                <%= row %>
                            <% end %>
                        </tbody>
                    </table>
                    <%= footer %>
            </div>
        </div>
    </div>
<% end %>
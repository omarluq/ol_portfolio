<div id="<%= @uni_id %>" class='justify-between 2xl:w-1/3 bg-black shadow-lg ml-10 md:ml-20 2xl:ml-3 rounded sm:flex-row flex border border-slate-700 flex-col mb-5'>
  <div class="w-full sm:px-6 p-2 flex items-center font-semibold justify-center bg-green-700 sm:rounded-tl sm:rounded-bl sm:h-auto sm:w-auto text-slate-400">
    <%= component 'ui/icon', locals: { name:  'check-circle', size: :md }%>
  </div>
  <div class="flex flex-col justify-center pr-4 xl:-ml-4 pl-4 xl:pl-1 sm:w-3/5 sm:pt-4 sm:pb-4 pb-2">
    <h1 class="text-lg text-slate-700 font-semibold pb-1">Got It!</h1>
    <p class="text-sm text-slate-400 font-normal">Thank you for wanting to connect! I will get back to you ASAP. </br>
                   Meanwhile feel free to follow me on my socials below</p>
  </div>
  <div class="w-full cursor-pointer sm:px-6 p-2 flex gap-3 items-center justify-center bg-slate-700 sm:rounded-tr sm:rounded-br sm:w-12 sm:h-12 sm:h-auto sm:w-auto text-slate-400" data-reflex='click->Alerts#dismiss' data-alert-id="<%= @uni_id %>" >
    <%= component 'ui/icon', locals: { name:  'x-circle', size: :md }%>
    <p class="text-sm text-slate-400 font-semibold">Dismiss</p>
  </div>
</div>

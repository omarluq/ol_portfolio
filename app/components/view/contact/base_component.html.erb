<%= component_controller(class: 'flex flex-col w-full ml-10 md:ml-20 gap-10 2xl:ml-3') do %>
<div class='flex flex-col gap-5'>
  <h1 class='lg:text-6xl md:text-5xl text-4xl text-slate-700 font-bold'> Get in touch </h1>
  <%= tag.form data: reflex_data_attributes('submit->submit'), class: 'flex flex-col gap-3' do %>
    <div class='flex flex-col text-slate-400 gap-3'>
      <%= tag.label(class: 'block text-lg font-semibold') { 'Full name' } %>
      <%= tag.input name: 'contact_request[name]', type: :text, id: :contact_request_name, class: 'bg-transparent focus:outline-none rounded w-full text-sm placeholder-slate-600 py-2 mr-4 focus:ring-slate-400 focus:border-slate-400 active:ring-slate-400'  %>
    </div>
    <div class='flex flex-col text-slate-400 gap-3'>
      <%= tag.label(class: 'block text-lg font-semibold') { 'Email' } %>
      <%= tag.input name: 'contact_request[email]', type: :text, id: :contact_request_email, class: 'bg-transparent focus:outline-none rounded w-full text-sm placeholder-slate-600 py-2 mr-4 focus:ring-slate-400 focus:border-slate-400 active:ring-slate-400'  %>
    </div>
    <div class='flex flex-col text-slate-400 gap-3'>
      <%= tag.label(class: 'block text-lg font-semibold') { 'Phone Number' } %>
      <%= tag.input name: 'contact_request[phone]', type: :text, id: :contact_request_phone, class: 'bg-transparent focus:outline-none rounded w-full text-sm placeholder-slate-600 py-2 mr-4 focus:ring-slate-400 focus:border-slate-400 active:ring-slate-400'  %>
    </div>
    <div class='flex flex-col text-slate-400 gap-3'>
      <%= tag.label(class: 'block text-lg font-semibold') { 'Message' } %>
      <%= text_area_tag'contact_request[message]', nil, id: :contact_request_message, size: '30x15', class: 'bg-transparent p-2 focus:outline-none rounded w-full text-sm placeholder-slate-600 mr-4 focus:ring-slate-400 focus:border-slate-400 active:ring-slate-400'  %>
    </div>
    <div class='flex flex-col mt-5'>
      <%= tag.input name: 'Submit', type: :submit,  class: 'inline-flex items-center justify-center whitespace-nowrap rounded-md border border-current bg-slate-500 px-4 py-2 text-base font-medium text-tertiary shadow-sm' %>
    </div>
  <% end %>
</div>
<% end %>